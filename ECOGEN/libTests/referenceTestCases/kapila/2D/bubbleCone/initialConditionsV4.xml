<?xml version = "1.0" encoding = "UTF-8" standalone = "yes"?>
<CI>
    <!-- LIST OF GEOMETRICAL DOMAINS  -->
    <physicalDomains> 
        <domain name="base" state="water" type="entireDomain"/>
        <domain name="bubble"  state="bubble" type="disc">
            <dataDisc axe1="x" axe2="y" radius="30e-6">
                <center x="0." y="0." z="0."/>
            </dataDisc>
        </domain>
        <domain name="wall" state="water_dens" type="entireDomainWithParticularities"/>
    </physicalDomains>

    <!-- LIST OF BOUNDARY CONDITIONS -->
    <boundaryConditions>
        <boundCond name="CLXm" type="symmetry" number="1"/>
        <boundCond name="CLXp" type="abs" number="2"/>
        <boundCond name="CLYm" type="wall" number="3"/>
        <boundCond name="CLYp" type="abs" number="4"/>
    </boundaryConditions>
    
    <!--  LIST OF STATES  -->
    <state name="water">
        <material type="fluide" EOS="IG_air.xml">
            <dataFluid alpha="0." density="1.2"/>
        </material>
        <material type="fluide" EOS="SG_water.xml">
            <dataFluid alpha="1." density="1000."/>
        </material>
        <mixture>
            <dataMix pressure = "2.e6"/>
            <velocity x="0." y="0." z="0."/>
        </mixture>
    </state>

    <state name="water_dens">
        <material type="fluide" EOS="IG_air.xml">
            <dataFluid alpha="0." density="1.2"/>
        </material>
        <material type="fluide" EOS="SG_water.xml">
            <dataFluid alpha="1." density="1e6"/>
        </material>
        <mixture>
            <dataMix pressure = "0."/>
            <velocity x="0." y="0." z="0."/>
        </mixture>
    </state>

    <state name="bubble">
        <material type="fluide" EOS="IG_air.xml">
            <dataFluid alpha="1." density="0.03"/>
        </material>
        <material type="fluide" EOS="SG_water.xml">
            <dataFluid alpha="0." density="1000."/>
        </material>
        <mixture>
            <dataMix pressure = "2300."/>
            <velocity x="0." y="0." z="0."/>
        </mixture>
    </state>

</CI>
